#! /bin/bash

function cleanup_filename() {
	if [ $# != 1 ]; then
		return 1
	else
		newvid=$(echo "$1" | sed -e "s/_/\ /g" | 
		                     sed -e "s/\[[^][]*\]\ //g" |
		                     sed -e "s/([^][]*)\ //g" | 
		                     sed -e "s/\ \+([^][]*)//g" | 
		                     sed -e "s/\ \+\[[^][]*\]//g" | 
		                     sed -e "s/\[[^][]*\]//g" |
		                     sed -e "s/([^][]*)//g" )
		echo "$newvid"
		return 0
	fi
}

for vid in *; do 
	if [ -f "$vid" ]; then 
		newvid=$(cleanup_filename "$vid")
		echo "$newvid"
	fi
done

read -p "is this good?  (y/N) " check

if [ "$check" = "y" ] || [ "$check" = "Y" ]; then
	for vid in *; do 
		if [ -f "$vid" ]; then 
			echo "$newvid" 
			newvid=$(cleanup_filename "$vid")
			mv "$vid" "$newvid"
		fi
	done
else
	echo "Fine. Be that way."
fi
