#! /bin/bash
set -e

if ! [ -d /run/media/quetzal/Aves ]; then
  echo "Backup not mounted."
  exit 1
fi

sudo rsync -Pradog --sparse --delete-excluded \
  /home/quetzal/.local/libvirt/images/ /run/media/quetzal/Aves/VMs/KVM/
sudo rsync -Pradog --delete-excluded \
  /home/quetzal/.VirtualBox/ /run/media/quetzal/Aves/VMs/VirtualBox/
sync
