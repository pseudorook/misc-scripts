#! /bin/bash
set -eu
source globals

if [ $# != 1 ]; then
  show_error "Incorrect # of parameters."
  echo "Usage: archive /path/to/directory"
  exit 1
fi

dir="${1}"
if [ "${dir:0:2}" = "~/" ]; then
  dir="${HOME}/${dir:2}"
fi

if [ -d "${dir}" ]; then
  archive=$(basename ${dir} | tr "[:upper:]" "[:lower:]")_$(date +%Y%m%d-%I%M%S)
  tar czf "${archive}.tar.gz" ${dir}
else
  show_error "${dir} is not a directory."
  exit 1
fi
