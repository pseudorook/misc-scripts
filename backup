#! /bin/bash 

# Back up files or directories provided as input. Format: 
#    FILENAME -> FILENAME_YYYY-MM-DD

for item in "$@"; do
	if [ -f "$item" ]; then
		cp "$item" "$item""_$(date +%F)"
	elif [ -d "$item" ]; then
		cp -r "$(basename $item)" "$(basename $item)""_$(date +%F)"
	else 
		echo "$item - filetype not recognized or file not found"
	fi	
done
